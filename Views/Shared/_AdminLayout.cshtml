<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="wrapper">
        <aside id="sidebar" class="js-sidebar">
            <!-- content for sidebar -->
            <div class="h-100  d-flex flex-column" style="background-color: #004d4d;">
                <div class="sidebar-logo" style="background-color: #004d4d;">
                    <a href="#">Student Permit System</a>
                </div>
                <ul class="sidebar-nav" style="background-color: #004d4d;">

                    <li class="sidebar-item">
                        <a asp-controller="Home" asp-action="Index" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-house-chimney"></i>
                            Home
                        </a>
                     </li>
                     <li class="sidebar-item">
                        <a asp-controller="Admin" asp-action="AddEmployee" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-users pe-2"></i>
                            Employees
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Admin" asp-action="AddStudent" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-users pe-2"></i>
                            Students
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Admin" asp-action="AddAdmin" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-users pe-2"></i>
                           Add Admin
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a asp-controller="Requests" asp-action="Index" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-file-lines pe-2"></i>
                            Requests
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Feedback" asp-action="Index" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-file-lines pe-2"></i>
                            Feedback
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Contact" asp-action="Index" class="sidebar-link collapsed" aria-expanded="false">
                            <i class="fa-solid fa-file-lines pe-2"></i>
                            Contact Details
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav mt-auto align-content-center align-items-center m-2">
                    <li class="nav-item dropdown">
                        <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                            <img src="~/images/userProfile.jpg" class="avatar img-fluid rounded" alt="">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                       
                            <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post">
                                <button type="submit">Logout</button>
                            </form>
                        
                        </div>
                      
                    </li>
                </ul>
               @*  <ul class="navbar-nav mt-auto align-content-center align-items-center m-2">
                        
                            <partial name="_LoginPartial" />

                        
                    </ul> *@
            </div>
        </aside>
        <div class="main">
            <nav class="navbar navbar-expand px-3 border-bottom" style="background-color: #004d4d;">
                <button class="btn btn-outline-light" id="sidebar-toggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
            </nav>
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
