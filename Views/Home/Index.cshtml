@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Add this link tag to include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add these script tags to include Bootstrap JavaScript and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5 main">
        <div class="row">
            <!-- Left Side: Text -->
            <div class="col-md-6">
                <article>
                    <h1>Welcome to the Student Permit System</h1>
                    <p>This system aims to streamline the process of booking permits for students to enter and leave the college campus.</p>
                </article>
            </div>
              <div class="col-md-6">
                <!-- Vision Button and Content -->
                <div class="mb-4">
                    <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target="#visionCollapse" aria-expanded="false" aria-controls="visionCollapse">
                        Vision
                    </button>
                    <div class="collapse mt-2" id="visionCollapse">
                        <div class="card card-body bg-dark text-light">
                            <h2 class="card-title">Our Vision</h2>
                            <p class="card-text">
                                "To create a safe and secure environment for students by providing an efficient and reliable permit system that enhances campus safety and convenience."
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Mission Button and Content -->
                <div>
                    <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target="#missionCollapse" aria-expanded="false" aria-controls="missionCollapse">
                        Mission
                    </button>
                    <div class="collapse mt-2" id="missionCollapse">
                        <div class="card card-body bg-dark text-light">
                            <h2 class="card-title">Our Mission</h2>
                            <p class="card-text">
                                "To provide students with a user-friendly platform for booking permits, ensuring their safety and security on campus. We strive to continuously improve our system to meet the evolving needs of our college community."
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            @* <div class="col-md-6">
                <!-- Admin Card -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Admin</h5>
                        <p class="card-text">Manage administrative tasks.</p>
                        <a href="@Url.Action("Login", "Admin")" class="btn btn-primary">Go to Admin Panel</a>
                    </div>
                </div>

                <!-- Student Card -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Student</h5>
                        <p class="card-text">Access student-related features.</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Go to Student Dashboard</a>
                    </div>
                </div>

                <!-- Employee Card -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Employee</h5>
                        <p class="card-text">View employee-specific information.</p>
                        <a href="@Url.Action("AddRequest", "Students")" class="btn btn-primary">Go to Employee Portal</a>
                    </div>
                </div>
            </div> *@
            <!-- Right Side: Image -->
            @* <div class="col-md-6">
                <img src="~/Images/permit.png" alt=" Student Permit System" class="img-fluid" width="45%" />
            </div> *@
        </div>
    </div>
</body>
</html>
