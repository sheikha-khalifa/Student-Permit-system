@model ApplicationUser
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section class="content">
        <div class="form-container">
            <h2>Register</h2>
            <form asp-action="Register" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Full Name:</label>
                    <input class="text" asp-for="Name" placeholder="Full Name" required="">
                    <span asp-validation-for="Name"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Email">Email: </label>
                    <input class="text email" asp-for="Email" placeholder="Email" required="">
                    <span asp-validation-for="Email"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input class="text" asp-for="Password" placeholder="Password" type="password">
                    <span asp-validation-for="Password"></span>
                </div>

                <br />
                <div class="form-group">
                    <label asp-for="PhoneNo">PhoneNo:</label>
                    <input class="text" asp-for="PhoneNo" placeholder="Phone Number" required="">
                    <span asp-validation-for="PhoneNo"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Address">Address:</label>
                    <input class="text" asp-for="Address" placeholder="Address" required="">
                    <span asp-validation-for="Address"></span>
                </div>
                <br />
               @*  <div class="form-group">
                    <label asp-for="Role">Role:</label>
                    <select asp-for="Role" class="form-control">
                        <option value="Admin">Admin</option>
                        <option value="Student">Student</option>
                        <option value="Employee">Employee</option>
                    </select>
                </div> *@
                <br />
                <input type="submit" value="SIGNUP">
            </form>
            <p>Already have an account? <a asp-action="Login">Login Now!</a></p>
        </div>
    </section>
</main>
